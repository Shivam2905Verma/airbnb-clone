<% layout('layouts/boilerplate') %>
<body>
  <form
    method="post"
    action="/listings/<%= data._id %>/update?_method=PATCH"
    novalidate
    class="needs-validation"
    enctype="multipart/form-data"
  >
    <div>
      <label for="title" class="form-label"><b>Title</b></label>
      <input
        name="listing[title]"
        value="<%= data.title %>"
        type="text"
        placeholder="Enter Title"
        class="form-control"
        required
      />
    </div>
    <br />
    <div>
      <label for="description" class="form-label"><b>Description</b></label>
      <textarea
        name="listing[description]"
        rows="7"
        cols="30"
        type="text"
        placeholder="Description"
        class="form-control"
        required
      >
<%= data.description %></textarea
      >
    </div>
    <br />
    <div class="mb-3">
      <p><b>Orignal Listing Image </b></p>
      <img src="<%=orignalImageUrl%>" alt="Old iamge" style="width: 20rem" />
    </div>
    <div>
      <label for="image" class="form-label"><b>Image</b></label>
      <input name="listing[url]" type="file" class="form-control" />
    </div>
    <br />
    <div>
      <div class="row">
        <div class="col-md-4">
          <label for="price" class="form-label"><b>Price</b></label>
          <input
            name="listing[price]"
            value="<%= data.price %>"
            type="number"
            placeholder="Price"
            class="form-control"
            required
          />
        </div>
        <br />
        <br />
        <br />
        <div class="col-md-8">
          <label for="country" class="form-label"><b>Location</b></label>
          <input
            name="listing[location]"
            value="<%= data.location %>"
            type="text"
            placeholder="Location"
            class="form-control"
            required
          />
        </div>
      </div>
    </div>
    <br />
    <div>
      <label for="location" class="form-label"><b>Country</b></label>
      <input
        name="listing[country]"
        value="<%= data.country %>"
        type="text"
        placeholder="Country"
        class="form-control"
        required
      />
    </div>
    <br />
    <br />
    <button class="btn btn-dark addbtn mb-3">Update</button>
  </form>
</body>
